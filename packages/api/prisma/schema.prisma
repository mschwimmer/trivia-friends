generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  username String
  firebaseUid String @unique
  provider String?
  boards TriviaBoard[]
  questions Question[]
}

model TriviaBoard {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author User? @relation(fields: [authorId], references: [id])
  authorId Int? 
}

model Question {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author User? @relation(fields: [authorId], references: [id])
  authorId Int?
  question String
  answer String
}